{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

<article class="post-card {{post_class}}{{#match @custom.feed_layout "Classic"}}{{#is "home"}}{{#has index="0"}} post-card-large{{/has}}
    {{#has index="1,2"}} dynamic{{/has}}{{/is}}{{/match}}{{#match @custom.feed_layout "Grid"}} keep-ratio{{/match}}{{#match @custom.feed_layout "List"}}{{#is "home, paged"}} post-card-large{{/is}}
    {{/match}}{{#unless access}} post-access-{{visibility}}{{/unless}}">
    <a class="post-card-image-link" href="{{url}}">
        <img 
            style="width: 100px; margin: auto;"
            src="{{img_url feature_image}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        />
    </a>
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                <h2 class="post-card-title" style="text-align:center">
                    {{title}}
                </h2>
            </header>
            {{!-- {{#if excerpt}}
                <div class="post-card-excerpt">{{excerpt}}</div>
            {{/if}} --}}
        </a>

    </div>

</article>
