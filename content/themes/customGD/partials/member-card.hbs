<article class="member-card">
    <a class="" href="{{url}}">
        <img 
            style="width: 100px; margin: auto;"
            src="{{img_url feature_image}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        />    
        <svg style="position: float; margin-top: -13vh; margin-left: 5vh">
            <path id="curve"
                fill="transparent" 
                d="M 25, 75
                a 50,50 0 0,1 100,0
                a 50,50 0 0,1 -100,0" 
                ></path>
            <text style="font-size: 20px; ">
                <textPath xlink:href="#curve">
                    {{title}}
                </textPath>
            </text>
        </svg>
    </a>
</article>